{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowJs": false,
        "strictNullChecks": true,
        "pretty": false
    },
    "exclude": [
        "dist",
        "typings/browser",
        "typings/main",
        "typings/browser.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
